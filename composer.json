{
  "name": "credit-commons/cc-node",
  "description": "Reference implementation of the Credit Commons protocol providing a mutual credit accounting node.",
  "license": "GPL-2.0+",
  "homepage": "https://creditcommons.net",
  "minimum-stability": "dev",
  "config": {
    "platform-check": true,
    "discard-changes": true,
    "lock": false
  },
  "authors": [
    {
      "name": "Matthew Slater",
      "email": "matslats@fastmail.com",
      "homepage": "http://matslats.net",
      "role": "Maintainer"
    }
  ],
  "support": {
    "email": "matslats@fastmail.com"
  },
  "repositories": [
    {
      "type": "gitlab",
      "url": "git@gitlab.com:credit-commons/cc-php-lib.git"
    }
  ],
  "require": {
    "credit-commons/cc-php-lib": "@dev",
    "ext-mysqli": "*",
    "php": "^8.0",
    "slim/slim": "^3@beta"
  },
  "autoload": {
    "psr-4": {
      "CCNode\\": "src",
      "CCNode\\Tests\\": "tests"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "touch last_exception.log"
    ]
  }
}
